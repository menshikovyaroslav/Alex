<Window x:Class="wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Width="250" Height="150">
            <StackPanel Orientation="Vertical" Width="200" Margin="20">
                <Label Grid.Row="0" Grid.Column="0" Content="Username" VerticalAlignment="Top" Margin="2"></Label>
                <TextBox Grid.Row="0" Grid.Column="1" Width="200" Height="40" VerticalAlignment="Top" Margin="2"></TextBox>
                <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Width="200" Height="40" Content="Go" Click="Button_Click" Margin="2"></Button>
            </StackPanel>
        </Border>

        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

       
        
    </Grid>
</Window>
